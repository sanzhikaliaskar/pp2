def calculate_running_average(numbers):
    return [sum(numbers[:i]) / i for i in range(1, len(numbers) + 1)] if numbers else "Input list is empty."

input_numbers = [1, 2, 3, 4, 5]
running_average_result = calculate_running_average(input_numbers)
print(f"Input Numbers: {input_numbers}")
print(f"Running Averages: {running_average_result}")
